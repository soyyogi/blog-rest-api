
<%- include('partials/header') %>

<form class="form" action="/post-edit" method="post">
  <input class="profile-user" type="text" name="authorization" style="display: none;">
  <input type="text" value="<%=post._id%>" name="id" style="display: none">
  <label for="title">Title</label>
  <input type="text" name="title" value="<%= post.title %>" id="title">
  <label for="body">Body</label>
  <textarea name="body" id="body" cols="30" rows="10"><%= post.body %></textarea>
  <button class="btn-save" type="submit">Save</button>
</form>
<form class="form" action="/posts" method="POST">
  <input class="profile-user" type="text" name="authorization" style="display: none;">
  <button class="btn-cancel">Cancel</button>
</form>

<%- include('partials/footer') %>

